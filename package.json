{
  "name": "relay-compiler-webpack-plugin",
  "version": "1.0.1",
  "description": "Automatically run the Relay Compiler from Webpack",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielholmes/relay-compiler-webpack-plugin"
  },
  "main": "dist/index.js",
  "jsnext/main": "src/index.js",
  "author": "Daniel Holmes",
  "license": "BSD-3-Clause",
  "scripts": {
    "clean": "rimraf dist",
    "build": "babel src --out-dir dist",
    "flow": "flow",
    "format": "prettier-standard 'src/**/*.js'",
    "test": "yarn prepublish",
    "prepublish": "yarn flow && yarn clean && yarn build"
  },
  "peerDependencies": {
    "relay-compiler": "^2.0.0",
    "webpack": ">=3.0.0"
  },
  "dependencies": {
    "fast-glob": "~2.2.0",
    "graphql": "14"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "flow-bin": "0.84.0",
    "prettier-standard": "^8.0.1",
    "relay-compiler": "^2.0.0-rc.1",
    "rimraf": "^2.6.2",
    "webpack": "^4.5.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "6.1"
          }
        }
      ],
      "@babel/preset-flow"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  }
}
