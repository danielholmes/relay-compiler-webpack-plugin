{
  "name": "relay-compiler-webpack-plugin",
  "version": "5.1.1",
  "description": "Automatically run the Relay Compiler from Webpack",
  "keywords": [
    "relay",
    "webpack",
    "webpack3",
    "webpack4",
    "react",
    "reactjs",
    "relay-compiler",
    "graphql"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/danielholmes/relay-compiler-webpack-plugin"
  },
  "main": "dist/index.js",
  "jsnext/main": "src/index.js",
  "files": [
    "dist"
  ],
  "author": "Daniel Holmes",
  "license": "BSD-3-Clause",
  "scripts": {
    "clean": "rimraf dist",
    "flow": "flow",
    "lint": "eslint --fix 'src/**/*.js'",
    "lint:check": "eslint 'src/**/*.js'",
    "test": "jest test --env node",
    "test:update": "jest test --env node -u",
    "test:coverage": "jest test --env node --coverage --coverageDirectory ./reports src",
    "build": "run-p flow lint:check test && babel src --out-dir dist",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "peerDependencies": {
    "relay-compiler": "^6.0.0",
    "webpack": ">=3.0.0"
  },
  "dependencies": {
    "fast-glob": "~3.0.3",
    "graphql": "14"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.0.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-relay": "^5.0.0",
    "eslint": "^6.0.1",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-flowtype": "^4.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-standard": "^4.0.0",
    "flow-bin": "0.105.2",
    "jest": "^24.0.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-relay": "^6.0.0",
    "relay-compiler": "^6.0.0",
    "rimraf": "^2.6.2",
    "standard": "^14.0.0-0",
    "webpack": "^4.5.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8.0"
          }
        }
      ],
      "@babel/preset-flow"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ]
  }
}
